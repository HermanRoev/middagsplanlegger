{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "lib/*": ["../src/lib/*"],
      "types/*": ["../src/types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../src/lib/**/*",
    "../src/types/**/*"
  ],
  "exclude": [
      "node_modules",
      "../node_modules"
  ]
}
